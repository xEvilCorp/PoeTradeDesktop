                                            </Grid.ColumnDefinitions>
                                            <Image Source="../../Images/frame_0_left.png"/>
                                            <Rectangle SnapsToDevicePixels="True" Grid.Column="1">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="../../Images/frame_7_mid.png"
                                                TileMode="FlipXY" 
