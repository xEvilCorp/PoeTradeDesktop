                                    </Grid>
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>

                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=UserControl}, Path=ItemFrameType}" Value="7">
                            <Setter Property="Content">
                                <Setter.Value>
                                    <Grid Height="30">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
