                                            </Grid.ColumnDefinitions>
                                            <Image Source="../../Images/frame_9_left.png"/>
                                            <Rectangle SnapsToDevicePixels="True" Grid.Column="1">
                                                <Rectangle.Fill>
                                                    <ImageBrush ImageSource="../../Images/frame_9_mid.png"
                                                TileMode="FlipXY" 
